<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Assignment 1</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", required: false)
    <link href="@Url.Content("/Content/Site.css")" rel="stylesheet" type="text/css" />

</head>
<body>
    <form id="form1" runat="server">
        <nav class="navbar navbar-expand-lg navbar-light">
            <a class="navbar-brand" href="TraditionalPage.aspx">
                <img class="logo" alt="" src="/Images/Logo.png" />
            </a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle"
                           href="#" id="navbarDropdown" role="button"
                           data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Approaches</a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="~/TraditionalPage.aspx">Traditional Page</a>
                            <a class="dropdown-item" href="~/ORMPage.aspx">EF Model Binding Page</a>
                            @Html.ActionLink("MVC Page", "MVCPage", "MVCPage", new { @class = "dropdown-item" })
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="~/DetailPage.aspx">Detail Page</a>
                        </div>
                    </li>
                </ul>
            </div>

        </nav>
        <div class="container">

            @RenderBody()
        </div>

        <footer>
            <div class="footer1">
                <div class="container">
                    <div class="row">
                        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 text-center">
                            <h3>LOCATION</h3>
                            <p>Croydon Park 5008</p>
                        </div>
                        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 text-center">
                            <h3>AROUND THE WEB</h3>
                            <ul class="icons">
                                <li><a href="#" class="fa fa-facebook-f"></a></li>
                                <li><a href="#" class="fa fa-google-plus"></a></li>
                                <li><a href="#" class="fa fa-twitter"></a></li>
                                <li><a href="#" class="fa fa-linkedin"></a></li>
                            </ul>
                        </div>
                        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 text-center">
                            <h3>ABOUT</h3>
                            <p>Stay Healthy, Stay Creative</p>
                        </div>
                    </div>
                    <!-- end row -->
                </div>
                <!-- end container -->
            </div>
            <div class="footer2">
                <p class="text-center">&copy; Thi Tran - Assignment 1 - SP2 - 2020</p>
            </div>

        </footer>
    </form>
    @Scripts.Render("https://use.fontawesome.com/000cf84f16.js");
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
