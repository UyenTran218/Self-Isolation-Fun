@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Assignment1.Models.ThingsToDo
@{ViewBag.Title = "Details";}
<h2 class="text-center">
    Selected Activity
</h2>
<fieldset>
    <dl class="dl-horizontal">
        <dt>
            Activity No.
        </dt>
        <dd>
            @Html.DisplayFor(model => model.id)
        </dd>
        <dt>
            Activity Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.thingToDo)
        </dd>
        <dt>
            Description
        </dt>

        <dd>
            @Html.DisplayFor(model => model.description)
        </dd>

        <dt>

        </dt>

        <dd>
            <img src=@Html.DisplayFor(model => model.mainImage) alt=@Html.DisplayFor(model => model.thingToDo) />
        </dd>
    </dl>
</fieldset>
<p>
    @Html.ActionLink("Back to List", "MVCPage")
</p>


